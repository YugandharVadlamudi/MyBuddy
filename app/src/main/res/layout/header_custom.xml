<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llheader"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/headerBackGround"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="@style/customHeaderHeight"

        >
        <ImageView
            android:id="@+id/ivH_menu"
            style="@style/headre_img"
            android:src="@drawable/menu"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="6dp"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Buddies"
            android:layout_weight="1"
            android:layout_centerInParent="true"
            android:textSize="@dimen/header_title_size"
            android:textStyle="bold"
            android:textColor="@color/header_title_color"


            />
        <ImageView
            android:id="@+id/ivH_contacts"
           style="@style/headre_img"
            android:src="@drawable/addcontacts"
            android:layout_alignParentRight="true"
            android:layout_marginTop="6dp"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</LinearLayout>